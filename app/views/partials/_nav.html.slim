nav.navbar.navbar-default
  .container-fluid
    // Brand and toggle get grouped for better mobile display
    .navbar-header
      button.navbar-toggle.collapsed data-toggle="collapse" data-target="#bs-example-navabar-collapse-1" aria-expanded="true"
        span.sr-only Menu
        span.icon-bar
        span.icon-bar
        span.icon-bar

      = link_to 'I Do We Do', root_path, class: 'navbar-brand'

    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav
        form.navbar-form.navbar-left role="search"
          .form-group
            input type="text" class="form-control" placeholder="Search"

          button.btn.btn-default type="submit" Submit

      ul.nav.navbar-nav.navbar-right
        li
          = link_to "#{current_order.order_items.size} Items in Cart (#{number_to_currency current_order.subtotal})", cart_path, class: 'btn'
        li
          = link_to 'Learn More', :learn, class:"btn #{'active' if current_page?(learn_path)}"
        li
          a class="btn" href="#" Track your Order
        li
          = link_to 'Sign In', sign_in_path, class:"btn #{'active' if current_page?(sign_in_path)}"
        li
          = link_to "Get Started", new_case_path, class:"btn #{'active' if current_page?(sign_in_path)}"
