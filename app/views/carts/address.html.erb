<div class="icon-group">
  <div class="icon">
    <i class="glyphicon glyphicon-map-marker"></i>
  </div>
  <div class="icon-content">
    <div class="form-group">
      <%= text_field_tag :order_location, "Add Location", class:"form-control", name: '' %>
      <%= form_for @location, url: new_order_path, html: { method: :post } do |lf| %>
      <%= lf.hidden_field :name  %>
      <%= lf.hidden_field :unit %>
      <%= lf.hidden_field :street_number %>
      <%= lf.hidden_field :street %>
      <%= lf.hidden_field :city %>
      <%= lf.hidden_field :state %>
      <%= lf.hidden_field :zipcode %>
      <%= lf.hidden_field :country %>
      <%= lf.hidden_field :long_address %>
      <% end %>

    </div>
  </div>
</div>

<div class="location-group">
  <div id="location_addr">

  </div>
<div id="location_map" style="display: none">

</div>
