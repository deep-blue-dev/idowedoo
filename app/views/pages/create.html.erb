<div class="row">

  <!--controls-->
  <div class="col-lg-3">
    <div>

      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
          <a href="#text" aria-controls="text" role="tab" data-toggle="tab">
            <h4>Text</h4>
          </a>
        </li>
        <li role="presentation">
          <a href="#image" aria-controls="image" role="tab" data-toggle="tab">
            <h4>Images</h4>
          </a>
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">

        <!---->
        <!--Text Tab-->
        <!---->

        <div role="tabpanel" class="tab-pane active" id="text">

          <!--textEnter-->
          <p>
            <label for="textInput">Enter Text Below</label>
            <div class="input-group">
              <input id="textInput" type="text" type="text" class="form-control" placeholder="I Do We Do">
              <span class="input-group-btn">
                <button id="textAdd" class="btn btn-default" type="button">Add Text</button>
              </span>
            </div>
          </p>
          <p>
            <button id="textItalic" class="btn btn-default">
              <span class="glyphicon glyphicon-italic"></span>
            </button>
            <button id="textBold" class="btn btn-default">
              <span class="glyphicon glyphicon-bold"></span>
            </button>
          </p>

          <!--chooseFont-->
          <p>
            <label for="chooseFont">Choose a font</label>
            <div class="dropdown" id="font_drop">
              <button id="fontFamily" class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" >
                <span class="selection">Helvetica</span>
                <span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li><a href="#" >Helvetica</a></li>
                <li><a href="#" >Comic Sans MS</a></li>
                <li><a href="#" >Arial</a></li>
                <li><a href="#" >Times New Roman</a></li>
              </ul>
              <input type='text' id="togglePaletteOnly" />
            </div>
          </p>


          <!--textOutline-->
          <p>
            <label for="textOutline">Add an outline</label>
            <div id="strokeSelect" class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                <!-- No outline -->
                <span class="selection" >No outline</span>
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><a data-stroke="0" href="#">No outline</a></li>
                <li><a data-stroke="1" href="#">Thin outline</a></li>
                <li><a data-stroke="1.5" href="#">Medium outline</a></li>
                <li><a data-stroke="2" href="#">Thick outline</a></li>
              </ul>
              <input type='text' id="strokePalette" />
            </div>
          </p>


        </div>

        <!---->
        <!-- Image Tab -->
        <!---->

        <div role="tabpanel" class="tab-pane" id="image">

          <div class="drop-container">
            <div class="drop-area">
              <div class="lead text-center">Drag Here to Upload</div>
              <input id='upload' type="file" accept="image/*" style="display: none">
              <a id="fileUpload" class="btn btn-default btn-lg btn-block">
                  Click Here to Upload
              </a>
              <small><em class="text-center">
                By uploading an image you agree that you hold the right to reproduce and sell the design.</em></small>
            </div>
          </div>

        </div>

      </div>

      <a href="#advanceControlz" class="btn btn-default" data-toggle="collapse">Advanced Controls</a><br>
      <br>
      <div id="advanceControlz" class="advanced-controls collapse">
        <button id="bringForward" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-up"></span>
        </button>
        <button id="sendBackwards" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-down"></span>
        </button>
        <button id="center" class="btn btn-default">
          <span class="glyphicon glyphicon-screenshot"></span>
        </button>
        <button id="delete" class="btn btn-default">
          <span class="glyphicon glyphicon-trash"></span>
        </button><br>
        <br>
        <p>
          <label><span>Angle:</span> <input type="range" id="angle-control" value="0" min="0" max="360" step="5">
          </label>
          <input type="number" id="angleValue" value="0" min="0" max="360" step="5">
        </p>
        <p>
          <label><span>Left:</span> <input type="range" id="left-control" value="150" min="0" max="300" step="5">
          </label>
          <input type="number" id="leftValue" value="150" min="0" max="300" step="5">
        </p>
        <p>
          <label><span>Top:</span> <input type="range" id="top-control" value="150" min="0" max="300" step="5">
          </label>
          <input type="number" id="topValue" value="150" min="0" max="300" step="5">
        </p>
        <p>
          <label><span>Scale:</span> <input type="range" id="scale-control" value="1" min="0.1" max="4" step="0.1">
          </label>
          <input type="number" id="scaleValue" value="1" min="0.1" max="4" step="0.1">

        </p>
      </div>
    </div>
  </div>

  <!--canvas-->
  <div class="col-lg-6">
    <section class="canvas-area">
        <canvas id="c" width="300" height="300" style="border:1px solid #ccc "></canvas>
    </section>
  </div>

  <!--caseSelector-->
  <div class="col-lg-3">
    <div class="well">
      <h4>Style and Design</h4>

      <!--caseStyle-->
      <p>
        <label for="textOutline">Change case color</label><br>
        <input type='text' id="caseColor" />
      </p>

      <!--caseList-->
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Panel heading</div>
        <div class="panel-body">
          <p>...</p>
        </div>

        <!-- List group -->
        <ul class="list-group">
          <li class="list-group-item">
            <a class='phone-case' data-case-path=<%= image_path('nexus5x-template.svg') %>>

              <div class="media">
                <div class="media-left">
                    <%= image_tag image_path('nexus5x-template.svg'), class: 'media-object', height: '64px'%>
                </div>
                <div class="media-body">
                  <h4 class="media-heading">Nexus 5X</h4>
                  ...
                </div>
              </div>
            </a>
          </li>
          <li class="list-group-item">
            <div class="media">
              <div class="media-left">
                <a href="#">
                  <img class="media-object" src="https://i.imgur.com/vtKZwB1.png" alt="...">
                </a>
              </div>
              <div class="media-body">
                <h4 class="media-heading">Ipad Air 2</h4>
                ...
              </div>
            </div>
          </li>
          <li class="list-group-item">
            <div class="media">
              <div class="media-left">
                <a href="#">
                  <img class="media-object" src="https://i.imgur.com/IDvo98M.png" alt="...">
                </a>
              </div>
              <div class="media-body">
                <h4 class="media-heading">Galaxy S6</h4>
                ...
              </div>
            </div>
          </li>
        </ul>
      </div>
      <h5>Base Cost @ 50 Units</h5>
      <h3>$32.99</h3>
      <% order_item_price = 32.99 %>
      <%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :unit_price, value: order_item_price  %>
        <% %>
        <div class="input-group">
          <%= f.number_field :quantity, value:1, class:"form-control", min:1 %>
          <div class="input-group-btn">

            <%= f.submit "Add to cart", class:"btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <%= link_to 'Add to Cart', cart_path, {id: 'addCart', class: 'btn-lg btn-block btn-danger'} %>
    </div>

  </div>

</div>

